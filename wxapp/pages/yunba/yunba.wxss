/**index.wxss**/
@import "../../lib/weui/weui.wxss";

.weui-input {
    background-color: #FFFFFF;
}

.abut {
    padding-block-start: 10px;
    margin-top: 10px;
    align-items: center;
}
.buttom-mini {
    margin-top: 10px;
    margin-left: 15%;
}

.weui-btn {
    margin-left: 20px;
    margin-right: 20px;
}

.weui-flex {
    margin-bottom: 10px;
}

.buttom-mini {
    width: 20%;
}

.tap-abled {
    background-color: #FFFFFF;
    border-radius: 3pt;
    border: 1px solid #888888;
    margin-left: 10px;
}

.weui-text {
    margin-left: 10px;
    margin-right: 10px;
}

.page-section {
    margin-top: 10px;
    margin-bottom: 10px;
}

.kind-list-item {
  margin: 20rpx 0;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}
.kind-list-item:first-child {
  margin-top: 0;
}
.kind-list-text{
  flex: 1;
}
.kind-list-img {
  width: 60rpx;
  height: 60rpx;
}
.kind-list-item-hd {
  padding: 30rpx;
  display: flex;
  align-items: center;

  transition: opacity .3s;
}
.kind-list-item-hd-show {
  opacity: .2;
}
.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list-item-bd-show {
  height: auto;
}